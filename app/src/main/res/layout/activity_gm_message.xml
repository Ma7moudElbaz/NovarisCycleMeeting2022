<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="15dp"
    tools:context=".gm_message.GmMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/screen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gm_message"
                android:textColor="@color/dark_text"
                android:textSize="24sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_back"
                app:drawableTint="@color/dark_text" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gm_bg">

                    <RelativeLayout
                        android:id="@+id/img_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="20dp"
                        android:background="@drawable/white_gm_round">

                        <com.github.siyamed.shapeimageview.RoundedImageView
                            android:id="@+id/img_profile"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pptest"
                            app:siBorderColor="@color/white"
                            app:siBorderWidth="0dp"
                            app:siRadius="90dp"
                            app:siSquare="true" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toEndOf="@+id/img_container"
                        android:layout_marginStart="15dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahmed Adel"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_text"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="General Manager"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/dark_text"/>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Message From Gm"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/dark_text"
                    android:paddingHorizontal="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm Welcome Message From Gm "
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gray"
                    android:paddingHorizontal="25dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>